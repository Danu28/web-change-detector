{
  "crawlerSettings": {
    "stylesToCapture": ["color","background-color","font-size","font-weight","font-family",
                        "width","height","position","margin","padding","border","text-align",
                        "line-height","opacity","z-index","box-shadow","border-radius"],

    "attributesToCapture": ["href","src","alt","id","class","type","data-testid"],
    
    "ignoreAttributePatterns": ["data-reactid.*","data-react-.*","data-testid-.*","data-automation-.*",
                                "_ngcontent-.*","_nghost-.*",".*null.*",".*dyMonitor.*"],
    "captureOnlyViewport": false,
    "maxTextLength": 1000,
    "ignoreEmptyText": true,
    "visibilityFilter": true,
    "throttleMs": 0
  },
  "comparisonSettings": {
    "textSimilarityThreshold": 0.90,
    "numericChangeThreshold": 0.15,
    "colorChangeThreshold": 0.1,
    "ignoreStyleChanges": ["width","position"],
    "styleCategories": {
      "layout": ["width","height","margin","padding","display","position"],
      "typography": ["font-size","font-weight","font-family","line-height","text-align"],
      "appearance": ["color","background-color","border","opacity","box-shadow","border-radius"],
      "positioning": ["z-index","visibility"]
    },
    "changeMagnitudeWeights": {"layout": 0.8, "typography": 0.6, "appearance": 0.7, "positioning": 0.5}
  },
  "performanceSettings": {
    "enableParallelProcessing": true
  },
  "outputSettings": {
    "directoryTemplate": "{section}_{baselineHost}-vs-{currentHost}",
    "baselineFile": "baseline.json",
    "currentFile": "current.json",
    "changesFile": "changes.json",
    "reportSimpleFile": "report-simple.html"
  },
  "flags": {
    "enableStructuralAnalysis": true,
    "enableSemanticMatching": true,
    "enableAdvancedClassification": false
  }
}
